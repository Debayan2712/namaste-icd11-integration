# NAMASTE-ICD11 Integration API Configuration
# Copy this file to .env and update the values as needed

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=true

# Database Configuration
DATABASE_URL=sqlite:///namaste_icd11.db

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# WHO ICD-11 API Configuration
# Get credentials from https://icd.who.int/icdapi
# Leave commented for demo mode with sample data
# WHO_CLIENT_ID=your_who_client_id_here
# WHO_CLIENT_SECRET=your_who_client_secret_here

# ABHA/ABDM Integration Configuration
# For production integration with India's ABDM
ABHA_BASE_URL=https://dev.abdm.gov.in

# FHIR Configuration
FHIR_BASE_URL=http://localhost:5000/fhir

# Redis Configuration (Optional)
# Uncomment if using Redis for caching
# REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216

# Production Security (uncomment for production)
# HTTPS_ONLY=true
# SECURE_COOKIES=true
